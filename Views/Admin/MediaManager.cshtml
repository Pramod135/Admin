@model List<string>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .modalDialog {
        position: fixed;
        font-family: Arial, Helvetica, sans-serif;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background: rgba(0, 0, 0, 0.8);
        z-index: 99999;
        opacity: 0;
        -webkit-transition: opacity 400ms ease-in;
        -moz-transition: opacity 400ms ease-in;
        transition: opacity 400ms ease-in;
        pointer-events: none;
    }

        .modalDialog:target {
            opacity: 1;
            pointer-events: auto;
        }

        .modalDialog > div {
            width: 400px;
            position: relative;
            margin: 10% auto;
            padding: 5px 20px 13px 20px;
            border-radius: 10px;
            background: #fff;
            background: -moz-linear-gradient(#fff, #999);
            background: -webkit-linear-gradient(#fff, #999);
            background: -o-linear-gradient(#fff, #999);
        }

    .close {
        background: #606061;
        color: #FFFFFF;
        line-height: 25px;
        position: absolute;
        right: -12px;
        text-align: center;
        top: -10px;
        width: 24px;
        text-decoration: none;
        font-weight: bold;
        -webkit-border-radius: 12px;
        -moz-border-radius: 12px;
        border-radius: 12px;
        -moz-box-shadow: 1px 1px 3px #000;
        -webkit-box-shadow: 1px 1px 3px #000;
        box-shadow: 1px 1px 3px #000;
    }

        .close:hover {
            background: #00d9ff;
        }
</style>
<section>
    <div>
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-12">
                <div class="card rounded-3">
                    <div class="card-body p-4">
                        <h4 class="text-center my-3 pb-3">Media</h4>

                        <form class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2" action="/admin/media-manager" method="post" enctype="multipart/form-data">
                            <div class="col-8">
                                <div class="form-outline">

                                    <div class="col-md-8 form-group">
                                        <input type="file" name="FilesData" class="form-control form-control-rounded" multiple />
                                    </div>

                                </div>
                            </div>
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                        <hr />
                        <div class="card-body">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-3 form-group">



                                        <a href="@item" target="_blank" class="col-12"><img src="@item" class="col-12" height="200" /></a>
                                        <div class="row">
                                            <div class="col-3"></div>
                                            <a href="#" class="btn btn-primary btn99 col-6" title="@item">copy-me</a>
                                            <div class="col-3"></div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






