
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
 
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center">Manage Page</h2>
                <hr>
                <form class="row g-3" asp-action="CreateTestmonial"  asp-controller="Admin" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="row">

                            <div class="col-md-6 form-group">
                                <label for="input-6">Name</label>
                                <input type="text" name="Name" class="form-control form-control-rounded" id="input-6" required/>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="input-7">Profession</label>
                                <input type="text" name="Profession" class="form-control form-control-rounded" id="input-7" required/>
                            </div>
                             <div class="col-md-6 form-group">
                                <label>Image</label>
                                <input type="file" name="FileData" class="form-control form-control-rounded" id="FileData" />
                            </div>
                            <div class="col-12 form-group">
                                <label for="input-9">Comments</label>
                                <textarea type="text" name="Comments" class="form-control form-control-rounded" id="input-9" rows="5"></textarea>
                            </div>
                           
                        </div>
                        <div class="form-group text-center m-4">
                            <button type="submit" value="ManagePage" class="btn btn-success btn-round px-5"><i class="icon-lock"></i> Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


                        